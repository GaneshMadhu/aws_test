<div class="ug-filters">
  <form method="GET" action="/" id="ug-filters-form">
    <a href="#!" class="ugf-close ug-icon i-close"></a>
    <div class="ugfc-header">
      <i class="ug-icon i-filter"></i>
      <h3>Filters</h3>
    </div>
    <div class="ugf-content">

      <% filters.each do |type| %>
        <%= react_component('FilterSelect', SelectFilterParams.new(data["filters"][type], type).options) %>
      <% end %>

      <div class="ugf-filter">
        <header class="ugf-header">
          <a href="#ugff-performance2" class="btn ugf-edit">Edit</a>
          <h4>Type of Posts
            <a href="#!" class="tooltip-trigger">
              <i class="ug-icon i-info"></i>
              <span class="tooltip">Posts that have been clicked, commented or replied to are counted as engagements.</span>
            </a>
          </h4>
          <a href="!#close" class="clear-values"><span>Clear All</span> <i class="ug-icon i-remove"></i></a>
          <span class="selected">0 selected</span>
        </header>
        <div id="#ugff-performance" class="ugf-checkboxes ugff-performance ugf-select">
        </div>
        <a href="#!" class="btn ugf-done"><i class="icon-arrow"></i></a>
      </div>


      <div class="ugf-filter">
        <header class="ugf-header">
          <a href="#ugff-time" class="btn ugf-edit">Edit</a>
          <h4>Date range</h4>
        </header>
        <div id="ugff-time-id" class="ugf-select ugff-time">
          <div id="ugf-time-formatted"><strong>Start</strong><span class="start">10.03.2016</span><strong>End</strong><span class="end">31.03.2016</span></div>
          <input type="text" id="ugf-time" />
        </div>
        <a href="#!" class="btn ugf-done"><i class="icon-arrow"></i></a>
      </div>
    </div>

    <div class="btn ugf-apply">Apply Filters</div>
  </form>
</div>
