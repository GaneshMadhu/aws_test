<%= render 'shared/breadcrumbs', navigation: {"Home": homepage_index_path, "Social Post Library": case_study_library_index_path} %>
<!-- start .ug-header -->
<header class="ug-header"> <!-- default is the light version - without adding "light" class to ug-header -->
  <script async src="//cdn.iframe.ly/embed.js?&align=left&api_key=<%=ENV['IFRAMELY_KEY']%>&parent=ug-card&iframe=amp" charset="utf-8"></script>
   <div id="fb-root"></div>
  <div class="content">
    <div class="ugh-page-title">
      <div>
        <h1>Social Post Library</h1>
        <h4 class="subtitle">A monthly updated library of social posts to help inspire you.<br>Scrutinize your competitors' posts and discover new trends and ideas that will help you create engaging content.</h4>
        <a href="#!" class="btn btn-filters"><i class="ug-icon i-filter"></i><span class="btnf-hide">Hide</span><span class="btnf-show">Show</span><span class="show-on-small"> filters</span></a>
      </div>
    </div>
  </div>
</header>

<div class="mobile-subheader">
  <p>An ever-growing library of social media posts for your inspiration.Analyze your competitors' posts and discover new ideas to create engaging content.</p>
</div>

<%= render "shared/scroll" %>

 <!-- start .page-content -->
<section class="page-content">
  <%= render 'shared/filters', data: @posts["filters"], select_filters: ["traits","company_groups","industries","companies","platforms"], post_type: true, date_range: true, api_path: filter_case_study_library_index_path, selected_options: @selected_options %>
  <!-- start .ug-hand-header -->
  <div class="ug-hand-header">
    <%= render 'case_study_content', data: (@posts["data"] rescue []), meta: (@posts["meta"] rescue []), api_path: scroll_case_study_library_index_path %>
  </div>
  <!-- END .ug-hand-header -->
</section>
<!-- end .ug-header -->
<!-- end .ug-breadcrumbs -->
