<%= render 'shared/breadcrumbs', navigation: {"Home": homepage_index_path, "Social Performance by Employer": social_media_performance_index_path} %>
<!-- start .ug-header -->
<header class="ug-header"> <!-- default is the light version - without adding "light" class to ug-header -->
  <div class="content">
    <div class="ugh-page-title">
      <div>
        <h1>Social Performance by Employer</h1>
        <h4 class="subtitle">Explore the performance of your brand and those of your competitors by comparing post volume <br>linked to certain attributes with how well talent actually engages with that content.</h4>
        <a href="#!" class="btn btn-filters"><i class="ug-icon i-filter"></i><span class="btnf-hide">Hide</span><span class="btnf-show">Show</span><span class="show-on-small"> filters</span></a>
      </div>
    </div>
  </div>
</header>

<%= render "shared/scroll" %>
<!-- end .ug-header -->

<!-- start .page-content -->
<section class="page-content">
  <%= render 'shared/filters', data: @tagging_metrics["filters"], select_filters: ["company_groups","companies","platforms"], post_type: true, date_range: true, api_path: filter_social_media_performance_index_path, selected_options: @selected_options %>
  <!-- start .ug-hand-header -->
  <div class="ug-hand-header">
    <%= render 'esmp_content', tagging_metrics: @tagging_metrics["data"] if @tagging_metrics["data"] %>
    <%= render 'attributes', attributes: @tagging_metrics["attributes"] if @tagging_metrics["attributes"] %>
  </div>
  <!-- END .ug-hand-header -->
</section>
<!-- END #save-panel .ug-side-modal  -->

